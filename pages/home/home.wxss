.container .body swiper {
  height: 350rpx;
}

.container .body swiper image {
  width: 100%;
  height: 100%;
}

.container .body .gridList {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  border-top: 1px solid #efefef;
  border-left: 1px solid #efefef;
}

.container .body .gridList .gridItem {
  width: calc(100% / 3);
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
}

.container .body .gridList .gridItem image {
  width: 60rpx;
  height: 60rpx;
}

.container .body .gridList .gridItem text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.container .body .imgBox {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 10rpx;
}

.container .body .imgBox image {
  width: 45%;
}
